BEGIN;


CREATE TABLE IF NOT EXISTS public.conversations
(
    id character varying COLLATE pg_catalog."default" NOT NULL,
    user_0 character varying COLLATE pg_catalog."default",
    user_1 character varying COLLATE pg_catalog."default",
    blcoked_status boolean,
    question character varying COLLATE pg_catalog."default",
    CONSTRAINT conversations_pkey PRIMARY KEY (id)
);

CREATE TABLE IF NOT EXISTS public.messages
(
    id character varying COLLATE pg_catalog."default" NOT NULL,
    convo_id character varying COLLATE pg_catalog."default",
    sender_id character varying COLLATE pg_catalog."default",
    text character varying COLLATE pg_catalog."default",
    media_url character varying COLLATE pg_catalog."default",
    date date,
    CONSTRAINT messages_pkey PRIMARY KEY (id)
);

CREATE TABLE IF NOT EXISTS public.users
(
    id character varying COLLATE pg_catalog."default" NOT NULL,
    ip character varying COLLATE pg_catalog."default",
    email character varying COLLATE pg_catalog."default",
    password character varying COLLATE pg_catalog."default",
    fcm_token character varying COLLATE pg_catalog."default",
    score numeric,
    is_prenium boolean,
    last_login date,
    match_list character varying[] COLLATE pg_catalog."default",
    username character varying COLLATE pg_catalog."default",
    profil_picture character varying COLLATE pg_catalog."default",
    images character varying[] COLLATE pg_catalog."default",
    age integer,
    relationship character varying COLLATE pg_catalog."default",
    school character varying COLLATE pg_catalog."default",
    assos character varying COLLATE pg_catalog."default",
    interests character varying[] COLLATE pg_catalog."default",
    astrological_sign character varying[] COLLATE pg_catalog."default",
    animals character varying[] COLLATE pg_catalog."default",
    CONSTRAINT user_pkey PRIMARY KEY (id)
);
END;
